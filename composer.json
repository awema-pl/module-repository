{
    "name": "awema-pl/module-repository",
    "description": "Implementation of repository pattern for Laravel. The package allows out-of-the-box filtering of data based on parameters in the <b>request</b>, and also allows you to quickly integrate the list filters and custom criteria.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Karol Golec",
            "email": "karolgolec10@gmail.com",
            "homepage": "https://github.pl/awema-pl/module-repository",
            "role": "Developer"
        }
    ],
    "support": {
        "email": "karolgolec10@gmail.com"
    },
    "homepage": "https://github.com/awema-pl/module-repository",
    "keywords": [
        "Laravel",
        "Repository",
        "pattern",
        "filters",
        "criteria",
        "scope",
        "php"
    ],
    "require": {
        "illuminate/support": "~5|~6|~7|~8|~9"
    },
    "autoload": {
        "psr-4": {
            "AwemaPL\\Repository\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AwemaPL\\Repository\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always --configuration phpunit.xml.dist --debug"
    },
    "extra": {
        "laravel": {
            "providers": [
                "AwemaPL\\Repository\\RepositoryServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}